<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_toolbarSearch"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/toolbar_rounded_corner"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="5dp"
        android:gravity="start|center"
        android:hint="@string/search"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="30dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_Clear"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="20dp"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/et_toolbarSearch"
        app:layout_constraintEnd_toEndOf="@id/et_toolbarSearch"
        app:layout_constraintTop_toTopOf="@id/et_toolbarSearch"
        app:srcCompat="@drawable/ic_close" />



</androidx.constraintlayout.widget.ConstraintLayout>